<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_setup_your_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Setup Your Plan"
            android:textColor="#000000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_change_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_setup_your_plan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="You can change this anytime in the settings"
            android:textColor="#000000" />


        <RelativeLayout
           android:id="@+id/tv_change_setting1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_change_settings"
            android:layout_margin="10dp"
            android:background="@drawable/bg_gradient">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vw_divider_1"
                android:text="RECOMMENDED"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/pie_chart_img"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" />


            <TextView
                android:id="@+id/tv_setup_wizard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Setup Wizard"
                android:textColor="#ffffff"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp" />


            <View
                android:id="@+id/vw_divider_1"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_setup_wizard"
                android:layout_margin="10dp"
                android:background="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_change_setting1"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_grident1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/equilizer" />

        <TextView
            android:id="@+id/Setup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Setup Your Plan"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <View

            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/Setup2"
            android:layout_margin="10dp"
            android:background="#ffffff" />


    </RelativeLayout>


</RelativeLayout>