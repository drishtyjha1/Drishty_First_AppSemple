<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_setup_your_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Setup Your Plan"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_change_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_setup_your_plan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="You can change this anytime in the settings"
        android:textColor="#000000" />


    <RelativeLayout
        android:id="@+id/tv_change_setting1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_change_settings"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_gradient">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_divider_1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/recommended"
            android:textColor="#ffffff" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/pie_chart_img" />


        <TextView
            android:id="@+id/tv_setup_wizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Setup Wizard"
            android:textColor="#ffffff" />


        <View
            android:id="@+id/vw_divider_1"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_setup_wizard"
            android:layout_margin="10dp"
            android:background="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dr_relat3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_change_setting1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_grident1"
        tools:layout_marginRight="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/equilizer" />

        <TextView
            android:id="@+id/Setup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Start From Scratch"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <View

            android:id="@+id/View_dri"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@+id/Setup2"
            android:layout_margin="10dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View_dri"
            android:layout_marginLeft="10sp"
            android:text="FOR EXPERTS"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@id/dr_relat3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dg_gradient2"
        tools:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/note" />

        <TextView
            android:id="@+id/dr_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="Templates"
            android:textColor="#ffffff" />

        <View
            android:id="@+id/dr_View3"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_below="@id/dr_text3"
            android:layout_margin="10dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dr_View3"
            android:text="FOR COMPLITE BEGINNERS"
            android:textColor="#ffffff" />
    </RelativeLayout>


</RelativeLayout>